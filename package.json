{
  "name": "git-curate",
  "version": "1.0.0",
  "description": "A CLI tool for curating Git branches and managing PRs",
  "main": "dist/index.js",
  "bin": {
    "git-curate": "./dist/index.js"
  },
  "scripts": {
    "build": "yarn tsc",
    "build:test": "yarn tsc -p tsconfig.test.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "commit": "git-cz",
    "commitlint": "commitlint --edit",
    "semantic-release": "semantic-release",
    "prepare-release": "yarn build && yarn package && yarn semantic-release",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "git",
    "cli",
    "pr",
    "curate"
  ],
  "author": {
    "name": "J.T. James",
    "email": "joeltjames@gmail.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joeltjames/git-curate.git"
  },
  "bugs": {
    "url": "https://github.com/joeltjames/git-curate/issues"
  },
  "homepage": "https://github.com/joeltjames/git-curate#readme",
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=20.8.1"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.3.0",
    "cli-spinner": "^0.2.10",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@types/cli-spinner": "^0.2.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.33.0"
  }
}
